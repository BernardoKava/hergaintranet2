<% provide(:title, " Resources") %>
<p id="notice"><%= notice %></p>

<h1>Resources</h1>

<div class="table-wrapper">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.name %></td>
        <td><%= resource.description %></td>
        <td><%= resource.user.email %></td>
        <td><%= link_to 'Show', resource %></td>

        <% if current_user.admin == true %>
        <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
        <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Resource', new_resource_path %>
